.popup-container {
  display: none;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  padding: 20px;
  width: 100%;
  max-width: 700px;
  min-height: 350px;
  background-color: #fff;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  z-index: 999;
}
.countdown {
  margin-top: 10px;
}
.countdown-heading {
  font-size: calc(var(--font-heading-scale) * 7rem);
}
